<Can@canvas.before>:
    Color:
        rgba:  (0, 128, 0, 0.7)#(0.2, 0.2, 0.2, 1) 
    Rectangle:
        pos: self.pos
        size: self.size
<Traductor>:	
	f: _f 
	m: _m
	are_aca:""
	BoxLayout:	

		orientation: 'vertical'	
		canvas:
		    Color:
		        rgba: (0, 0, 255, 0.5)#(0.2, 0.2, 0.2, 1) 
		    Rectangle:
		        pos: self.pos
		        size: self.size		  
                source: 'faru.noip.me/data/fondo.jpg'

		GridLayout:

			cols: 1
			rows: 3
			Label:
				text: 'REGISTRO PARA USO DE COMPUTADORAS'
			Label:		
				text: "GRACIAS POR COMPLETAR "
			Label:		
				text: "hora del sistemas"
		GridLayout:
			cols: 2
			rows: 4
			Label:
				text: 'NOMBRE: '
			TextInput:
				id: nom
				multiline: False
				padding:[10,0.5*(self.height - self.line_height)]
			Label:
				text: 'CEDULA/PASAPORTE:  '	
			TextInput:
				id: iden 
				multiline: False	
				padding:[10,0.5*(self.height - self.line_height)]
			Label:
				text: 'SEXO:  '	
			GridLayout:
				cols:2
				rows: 2
				Label:
			        text: "Femenino"
				CheckBox:
					id:_f
			        group: "sexo"
			    Label:
			        text: "Masculino"
				CheckBox:
					id: _m
			        group: "sexo"	
		    Label:
				text: 'USUARIO:  '	
		    Spinner:
		    	padding:[10,0.5*(self.height - self.line_height)]
		        text: "Estudiante"
		        values: "Estudiante", "Profesor"
		        size_hint: (None, None)
        		size: (100, 44)
		GridLayout:
			cols: 1			
			Label:
				text: 'AREA ACADEMICA ' 
			GridLayout:
				cols: 4
				rows: 4
				Label:
			        text: "ACD"
				CheckBox:
			        group: "academico"
			        on_active: root.are_aca = 'Red'
			    Label:
			        text: "DR"
				CheckBox:
			        group: "academico"			   
			    Label:
			        text: "MP"
				CheckBox:
			        group: "academico"
			    Label:
			        text: "CA"
				CheckBox:
			        group: "academico"
			    Label:
			        text: "GLION"
				CheckBox:
			        group: "academico"			   
			    Label:
			        text: "CS"
				CheckBox:
			        group: "academico"
			    Label:
			        text: "ING"
				CheckBox:
			        group: "academico"
			    Label:
			        text: "OTRO"
				CheckBox:
			        group: "academico"
		GridLayout:

			
			cols: 2	

			Button:
				background_color: (0, 0, 181/255, 0.7)
				text: 'ACEPTAR'
				on_press: 
					root.aceptar()
			Button:
				background_color: (0, 0, 181/255, 0.7)
				text: 'CANCELAR'	
		
